// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @unique @id

  firstName   String
  lastName    String

  email       String
  password    String

  dayBirth    Int
  monthBirth  Int
  yearBrith   Int

  frindsList  String?
  postsList   String?

  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt()
}